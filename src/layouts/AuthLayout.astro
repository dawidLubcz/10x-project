---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Logowanie | 10xProject" } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Zaloguj się lub zarejestruj do aplikacji 10xProject" />
  </head>
  <body class="min-h-screen bg-background text-foreground flex flex-col">
    <header class="py-6 px-4 container mx-auto flex justify-center">
      <a href="/" class="text-3xl font-bold text-primary">10xProject</a>
    </header>

    <main class="flex-1 container mx-auto px-4 flex flex-col items-center justify-center py-8">
      <slot />
    </main>

    <footer class="py-6 px-4 border-t mt-auto">
      <div class="container mx-auto text-center text-sm text-muted-foreground">
        <p>&copy; 2025-{new Date().getFullYear()} 10xProject. Wszystkie prawa zastrzeżone.</p>
      </div>
    </footer>
  </body>
</html> 