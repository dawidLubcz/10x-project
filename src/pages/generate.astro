---
import Layout from '../layouts/Layout.astro';
import { GenerateView } from '../components/GenerateView';
---

<Layout title="Generowanie Fiszek - 10xProject">
  <div class="min-h-screen flex flex-col bg-background">
    <header class="border-b border-zinc-200 dark:border-zinc-800 py-4 bg-zinc-50 dark:bg-zinc-900">
      <div class="container mx-auto px-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-primary">10xProject</a>
        <div class="flex items-center">
          <nav class="mr-4">
            <ul class="flex space-x-4">
              <li><a href="/" class="text-zinc-900 dark:text-zinc-100 hover:text-primary transition-colors">Dashboard</a></li>
              <li><a href="/flashcards" class="text-zinc-900 dark:text-zinc-100 hover:text-primary transition-colors">Fiszki</a></li>
              <li><a href="/generate" class="text-zinc-900 dark:text-zinc-100 hover:text-primary transition-colors">Generator AI</a></li>
              <li><a href="/learn" class="text-zinc-900 dark:text-zinc-100 hover:text-primary transition-colors">Nauka</a></li>
            </ul>
          </nav>
          <button id="theme-toggle" class="p-2 rounded-full bg-zinc-200 dark:bg-zinc-800 text-zinc-900 dark:text-zinc-100 hover:bg-zinc-300 dark:hover:bg-zinc-700 transition-colors">
            <span class="theme-toggle-icon inline-block w-5 h-5"></span>
          </button>
        </div>
      </div>
    </header>

    <main class="flex-grow bg-zinc-100 dark:bg-zinc-950">
      <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8 text-center text-zinc-900 dark:text-zinc-50">Generowanie Fiszek</h1>
        <GenerateView client:load />
      </div>
    </main>

    <footer class="border-t border-zinc-200 dark:border-zinc-800 py-4 bg-zinc-50 dark:bg-zinc-900">
      <div class="container mx-auto px-4 text-center text-sm text-zinc-600 dark:text-zinc-400">
        &copy; 2023-2024 10xProject. Wszystkie prawa zastrzeżone.
      </div>
    </footer>
  </div>
</Layout>

<script>
  // Inicjalizacja przycisku po załadowaniu strony
  document.addEventListener('DOMContentLoaded', () => {
    const themeToggleButton = document.getElementById('theme-toggle');
    // Używamy as any, aby TypeScript nie zgłaszał błędu
    const toggleFn = (window as any).toggleTheme;
    
    if (themeToggleButton && typeof toggleFn === 'function') {
      themeToggleButton.addEventListener('click', toggleFn);
    }
  });
</script>